<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum_v2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myapplication.ForumV2Activity">

    <TextView
        android:text="Recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/tvRecent"
        android:layout_alignBaseline="@+id/tvPopular"
        android:layout_alignBottom="@+id/tvPopular"
        android:layout_toRightOf="@+id/tvPopular"
        android:layout_toEndOf="@+id/tvPopular"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/tvSearch"
        android:layout_alignBaseline="@+id/tvRecent"
        android:layout_alignBottom="@+id/tvRecent"
        android:layout_toRightOf="@+id/tvRecent"
        android:layout_toEndOf="@+id/tvRecent"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="--TITLE--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/textView21"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_below="@+id/tvPopular"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="--TITLE--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:id="@+id/textView23"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCategories"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/tvPopular"
        android:layout_alignBottom="@+id/tvPopular"
        android:layout_toLeftOf="@+id/textView22"
        android:layout_toStartOf="@+id/textView22"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPopular"
        android:layout_marginTop="34dp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:text="--TITLE--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/textView24"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:text="--TITLE--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24" />
</RelativeLayout>
