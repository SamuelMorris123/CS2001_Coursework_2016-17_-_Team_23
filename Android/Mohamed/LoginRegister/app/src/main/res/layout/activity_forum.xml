<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myapplication.ForumActivity">

    <TextView
        android:text="Forums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:queryHint="@android:string/search_go" />

    <TextView
        android:text="work in Malibu"
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/tvTopic1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Recent posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Updated 4 hours ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="12sp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="great hike trails!"
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/textView14"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Updated 2 hours ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="12sp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Any good beaches?"
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/textView10"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Updated 1 hour ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="12sp"
        android:layout_below="@+id/tvTopic1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Good gyms in LA"
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/textView4"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="13dp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/tvTopic1"
        android:layout_alignStart="@+id/tvTopic1" />

    <TextView
        android:text="Updated 9 hours ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="12sp"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

</RelativeLayout>
